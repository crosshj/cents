{
    "singleQuote": true,
    "useTabs": true,
    "tabWidth": 4,
    "semi": true,
    "singleAttributePerLine": true,

    "overrides": [
        {
            "files": "*.json",
            "options": {
                "useTabs": true
            }
        },
        {
            "files": "*.yml",
            "options": {
                "tabWidth": 4
            }
        }
    ]
}
